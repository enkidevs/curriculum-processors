{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "check-branch": "./scripts/check-branch.sh",
    "clean": "lerna run clean",
    "lint": "eslint .",
    "pre-commit-lint": "lint-staged",
    "prebuild": "npm run clean && npm test && ",
    "publish-packages": "lerna publish",
    "test:watch": "jest --watchAll",
    "test": "jest --coverage --notify"
  },
  "keywords": [
    "enki",
    "curriculum",
    "transformer",
    "processor",
    "ast"
  ],
  "author": "Nemanja Stojanovic <nemanjacoder@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enkidevs/curriculum-processors.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enkidevs/curriculum-processors/issues"
  },
  "homepage": "https://github.com/enkidevs/curriculum-processors#readme",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "jest": "^23.1.0",
    "jest-in-case": "^1.0.2",
    "jsonfile": "^4.0.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "1.13.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma=es5 --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
      "eslint --quiet --rule 'prettier/prettier: [\"error\", {\"trailingComma\": \"es5\", \"singleQuote\": true}]'",
      "git add"
    ]
  },
  "pre-commit": [
    "check-branch",
    "pre-commit-lint",
    "test"
  ],
  "jest": {
    "testRegex": "packages/.*/__tests__/.*\\.test.js$",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/dist/**",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*sandbox.js"
    ]
  }
}
